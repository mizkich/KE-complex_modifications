{
  "title": "Personal rules (@mizkich)",
  "rule_list": false,
  "make_extra_description": true,
  "rules": [
    {
      "description": "Ctrl+bを押したときに、直前に英数も送信する。",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [ "control" ]
            }
          },
          "to": [
            { "key_code": "japanese_eisuu" },
            {
              "key_code": "b",
              "modifiers": [ "control" ]
            }
          ]
        }
      ]
    },
    {
      "description": "ESCを押したときに、直後に英数も送信する。",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "escape"
          },
          "to": [
            { "key_code": "escape" },
            { "key_code": "japanese_eisuu" }
          ]
        }
      ]
    }
  ]
}
